exitIfNeeded () {
  if [ $? -ne 0 ]
	then
		exit 1
	fi
}

prefix=`(cd ../../ && ./utils/project-prefix)`
(cd ../../ && ./gradlew :$prefix-core:downloader:clean < /dev/null)

exitIfNeeded

(cd ../../ && ./gradlew :$prefix-core:downloader:build -x test < /dev/null)

exitIfNeeded

(cd ../../ && ./gradlew :$prefix-core:downloader:copyJars < /dev/null)

exitIfNeeded

if [ $# -eq 0 ]
then
	rm -rf ./jar/*
	cp ./build/libs/* ./jar
fi
